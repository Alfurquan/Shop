<%- include("../includes/head.ejs") %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include("../includes/topbar.ejs") %>
    <%- include("../includes/navigation.ejs") %>
    <main>
        <section class="py-5">
            <div class="card">
                <div class="header">
                    <h2>Login</h2>
                </div>
                <div class="form">
                    <form class="login-form" action="/login" method="POST">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input
                                class="<%= validationErrors.find(e=>e.param== 'email') ? 'form-control invalid' : 'form-control' %>"
                                type="email" name="email" id="email" value="<%= oldInput.email %>">
                            <% if(validationErrors.find(e=>e.param == 'email')) { %>
                            <p class="text-danger">
                                <%= validationErrors.find(e=>e.param == 'email').msg %>
                            </p>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input
                                class="<%= validationErrors.find(e=>e.param== 'password') ? 'form-control invalid' : 'form-control' %>"
                                type="password" name="password" id="password" value="<%= oldInput.password %>">
                            <% if(validationErrors.find(e=>e.param == 'password')) { %>
                            <p class="text-danger">
                                <%= validationErrors.find(e=>e.param == 'password').msg %>
                            </p>
                            <% } %>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <button class="btn btn-block" type="submit">Login</button>
                    </form>
                </div>
            </div>
            <div class="centered">
                <a href="/reset">Forgot Password?</a>
            </div>
        </section>
    </main>
    <%- include("../includes/end.ejs") %>