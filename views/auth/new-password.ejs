<%- include("../includes/head.ejs") %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include("../includes/topbar.ejs") %>
    <%- include("../includes/navigation.ejs",{csrfToken:csrfToken}) %>
    <main style="padding-top: 1rem;">
        <%- include("../includes/message.ejs") %>
        <section class="py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h2>Lost Password</h2>
                            </div>
                            <div class="form">
                                <form class="login-form" action="/newpassword" method="POST">
                                    <p class="help-text">
                                        Enter a new password for your account.
                                    </p>
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" name="password" id="password" class="form-control">
                                    </div>
                                    <input type="hidden" name="userId" value="<%= userId %>" />
                                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>" />
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                    <button class="btn btn-block" type="submit">Update password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>        
        </section>    
       
    </main>
    <%- include("../includes/end.ejs") %>